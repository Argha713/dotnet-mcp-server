{
  "Server": {
    "Name": "dotnet-mcp-server",
    "Version": "1.0.0"
  },

  "FileSystem": {
    "AllowedPaths": [
      "C:\\Users\\YourUsername\\Documents",
      "C:\\Projects"
    ]
  },

  "Sql": {
    "Connections": {
      "SampleDB": {
        "ConnectionString": "Server=localhost;Database=SampleDB;Trusted_Connection=True;TrustServerCertificate=True;",
        "Description": "Local sample database"
      }
    }
  },

  "Http": {
    "AllowedHosts": [
      "api.github.com",
      "jsonplaceholder.typicode.com",
      "httpbin.org"
    ],
    "TimeoutSeconds": 30
  },

  "Environment": {
    "AdditionalBlockedVariables": []
  },

  "Plugins": {
    "Enabled": true,
    "Directory": "plugins",
    "Config": {}
  },

  "Cache": {
    "Enabled": true,
    "DefaultTtlSeconds": 60,
    "MaxEntries": 1000,
    "ToolTtls": {
      "datetime": 0,
      "system_info": 0,
      "git": 0,
      "environment": 0,
      "sql_query": 300,
      "http_request": 120,
      "filesystem": 60,
      "text": 600,
      "data_transform": 600
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "McpServer": "Debug"
    }
  }
}
